<h1>Listing pairs</h1>

<table>
  <tr>
    <th>Chinese</th>
    <th>English</th>
    <th>Japanese</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pairs.each do |pair| %>
  <tr>
    <td><%= pair.chinese %></td>
    <td><%= pair.english %></td>
    <td><%= pair.japanese %></td>
    <td><%= pair.text_id %></td>
    <td><%= link_to 'Show', pair %></td>
    <td><%= link_to 'Edit', edit_pair_path(pair) %></td>
    <td><%= link_to 'Destroy', pair, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

